<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigate_list_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btnNavigateListView"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.203"/>
    <Button
            android:id="@+id/btnNavigateCustomListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigate_custom_list_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNavigateListView"/>

    <Button
            android:id="@+id/btnNavigateToPlanet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/planets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNavigateCustomListView"/>

    <Button
            android:id="@+id/btnNavigateToGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grid_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNavigateToPlanet"/>


</androidx.constraintlayout.widget.ConstraintLayout>