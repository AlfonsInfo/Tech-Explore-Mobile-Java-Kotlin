<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_height="wrap_content">

	<ImageView
			android:id="@+id/recycle_imageview"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp"
			android:src="@drawable/ic_launcher_background"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.0"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.099"/>
	<TextView
			android:textColor="@color/white"
			android:id="@+id/recycle_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginTop="28dp"
			android:text="@string/title"
			android:textSize="32sp"
			app:layout_constraintStart_toEndOf="@+id/recycle_imageview"
			app:layout_constraintTop_toTopOf="parent"/>
	<TextView
			android:textColor="@color/white"
			android:id="@+id/recycle_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:text="@string/your_description_here"
			android:textSize="16sp"
			app:layout_constraintStart_toStartOf="@+id/recycle_title"
			app:layout_constraintTop_toBottomOf="@+id/recycle_title" />

</androidx.constraintlayout.widget.ConstraintLayout>